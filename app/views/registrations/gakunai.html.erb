<%= stylesheet_link_tag    "index", :media => "all" %>

<p>
	<div style="display:inline-flex">
		<div class="btn-group" role="group" role="group">
			<button type="button" class="btn btn-default btn-lg dropdown-toggle b2" data-toggle="dropdown" aria-haspopup="true" aria-expandid"false" style="background: #cc3333">
				研究室 <span class="caret"></span>
			</button>
			<ul class = "dropdown-menu">
				<% @labos.each do |labo| %>
					<li class="dr"><a href = <%=@path %>/<%=labo.id%>><%=labo.name%></a></li>
				<% end %>
			</ul>
		</div>
		<div class="btn-group" role="group" role="group">
			<button type="button" class="btn btn-default btn-lg dropdown-toggle b2" data-toggle="dropdown" aria-haspopup="true" aria-expandid"false" style="background: #3366cc">
				教室 <span class="caret"></span>
				</button>
				<ul class = "dropdown-menu">
					<% @classrooms.each do |classroom|%>
						<li class="dr"><a href = <%=@path %>/<%=classroom.id%>><%=classroom.name%></a></li>
					<% end %>
				</ul>
		</div>
	</div>
</p>
